  "paths": {
    "/captcha": {
      "get": {
        "tags": [
          "Authenticate"
        ],
        "description": "Captcha key needs to confirm that you're not a robot",
        "responses": {
          "200": {
            "description": "xml captcha picture",
            "headers": {
              "key": {
                "description": "key for captcha recognition",
                "schema": {
                  "type": "string"
                }
              }
            },
            "content": {
              "image/svg+xml": {
              }
            }
          }
        }
      }
    },
    "/authenticate": {
      "post": {
        "tags": [
          "Authenticate"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthenticateResponse"
                }
              }
            }
          },
          "400": {
            "description": "Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GeneralResponse"
                }
              }
            }
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AuthenticateRequest"
              },
              "example": {
                "username": "admin",
                "password": "admin",
                "captcha": "X3K9",
                "captchaKey": "9225c13c-d179-42d4-8ebb-3439d5e74190"
              }
            }
          }
        }
      }
    },
    "/authenticate/refresh": {
      "post": {
        "description": "Get new jwt token",
        "tags": [
          "Authenticate"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RefreshTokenRequest"
              },
              "example": {
                "token": "qdH0I5oJp8PN8vBy03gqnyQ8UsUvWQymSFAUieay"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuthenticateResponse"
                }
              }
            }
          },
          "400": {
            "description": "Invalid token",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GeneralResponse"
                }
              }
            }
          }
        }
      }
    },
    "/authenticate/revoke": {
      "post": {
        "description": "Revoke jwt token",
        "tags": [
          "Authenticate"
        ],
        "security": [
          {
            "JWT": []
